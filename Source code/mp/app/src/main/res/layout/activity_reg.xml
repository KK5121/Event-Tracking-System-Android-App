<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/w"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Reg" >

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="username"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#f3f3f3"
        android:ems="10"
        android:paddingLeft="5dp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#f3f3f3"
        android:ems="10"
        android:hint="mail"
        android:inputType="textEmailAddress"
        android:paddingLeft="5dp" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#f3f3f3"
        android:ems="10"
        android:hint="password"
        android:paddingLeft="5dp" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pass"
        android:layout_below="@+id/pass"
        android:layout_marginTop="15dp"
        android:background="#f3f3f3"
        android:ems="10"
        android:hint="phoneno"
        android:inputType="number"
        android:paddingLeft="5dp" />

    <Button
        android1:id="@+id/reg"
        android1:layout_alignParentBottom="true"
        android1:layout_centerHorizontal="true"
        android1:text="register"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A6A6"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <TextView
        android1:id="@+id/textView1"
        android1:layout_alignLeft="@+id/ads"
        android1:layout_centerVertical="true"
        android1:text="Gender:"
        android1:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <RadioGroup
        android1:id="@+id/radioGroup1"
        android1:layout_alignRight="@+id/ads"
        android1:layout_alignTop="@+id/textView1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <RadioButton
            android1:id="@+id/radio0"
            android1:checked="true"
            android1:text="Male"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

        <RadioButton
            android1:id="@+id/radio1"
            android1:text="Female"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
    </RadioGroup>

    <EditText
        android1:id="@+id/ads"
        android1:layout_above="@+id/reg"
        android1:layout_alignLeft="@+id/phone"
        android1:layout_marginBottom="32dp"
        android1:background="#f3f3f3"
        android1:ems="10"
        android1:hint="address"
        android1:paddingLeft="5dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

</RelativeLayout>